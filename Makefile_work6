define app_compile_template
 $(1)_NAME = $(1)
 
 $(1)_OBJ = ./object/$$(notdir $$(patsubst %.cpp, %.o, $(1)))
 $(1)_OBJ_PURE = $$(notdir $$($(1)_OBJ))

 $(1)_CPP_NAME = $(1).cpp
 $(1)_OBJ_NAME = $(1).o
# $(1)_OBJ_PURE = $$(notdir $$($(1)_OBJ_NAME))
 $(1)_OBJ_FULL_NAME = ./object/$$(notdir $$($(1)_OBJ_NAME))

#$$(notdir $$($(1)_OBJ_NAME)): $$(notdir $$($(1)_CPP_NAME))
$$($(1)_OBJ_PURE): $(1)
	$$(CC) $$(CFLAGS) $$(OPT) -c $(1) -o $$($(1)_OBJ) $$(LDLIBS)
endef

$(foreach app, $(SRC), $(eval $(call app_compile_template,$(app))))



# Cleaning
clean:
	@echo "Cleaning: "
	rm -rf $(OBJ) $(PROGRAM)
print:
	@echo $(SRC)
	@echo $(OBJ)
	@echo $(addprefix ./object/, $(notdir $(patsubst %.cpp, %.o, $(SRC))))
