# $(1)_OBJ_PURE = $$(notdir $$($(1)_OBJ))

#$$($(1)_OBJ_PURE):$(1)
#	@echo "Compiling: " $(addsuffix .cpp, $(basename $$($(1)_OBJ_PURE)))
